package ${package}.${moduleName}.controller;

import ${package}.${moduleName}.response.DResponse;
import ${package}.${moduleName}.response.Result;
import ${package}.service.api.I${className}Service;
import ${package}.shared.domain.model.${className};
import ${package}.shared.domain.model.base.PageResult;

import lombok.AllArgsConstructor;
import lombok.extern.slf4j.Slf4j;
import org.springframework.web.bind.annotation.*;

import static org.springframework.http.MediaType.APPLICATION_JSON_VALUE;

import java.util.Map;

/**
 * @Author: ${author}
 * @Description: ${comments}接口
 * @Date: ${datetime}
 */
@Slf4j
@RestController
@RequestMapping(value = "/api/${classname}", produces = APPLICATION_JSON_VALUE)
@AllArgsConstructor
public class ${className}Controller {
    private I${className}Service ${classname}Service;

    /**
     * 分页条件查询
     * @param params 需要包含 pageNum,pageSize
     * @return PageResult
     */
    @PostMapping("/list")
    DResponse<PageResult<${className}>> findList(@RequestBody Map<String, Object> params) {
        return Result.success(${classname}Service.findList(params));
    }

}
